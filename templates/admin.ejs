<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Admin Page</title>

    <!-- Bootstrap CSS -->
    <!--<link rel="stylesheet" href="../bootstrap/bootstrap-4.0.0-beta-dist/css/bootstrap.min.css">-->
    <link rel="stylesheet" href="/static/bootstrap-4.0.0-alpha.6-dist/css/bootstrap.css">
		<link href="https://fonts.googleapis.com/css?family=Titillium+Web" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css?family=Enriqueta" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css?family=Quattrocento" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css?family=Francois+One" rel="stylesheet">
		<script src="/static/bootstrap-4.0.0-alpha.6-dist/js/bootstrap.js"></script>
		<script src="https://use.fontawesome.com/8b057a7cd3.js"></script>
		<link href="/static/signin.css" rel="stylesheet">
		<script type="application/javascript" src="/scripts/ejs_production.js"></script>
		<style>
			body {
				background-color: #cad3e6;
				background-image: url("/images/asfalt-light.png");
				repeat;
				!important;
			}
			.btn {
				font-size: 0.8rem;
				!important;
			}
			input[type='text'] {
				padding: 10px 10px;
				!important;
			}
			label {
				font-size: 0.8rem;
				!important;
			}
			.row {
				font-size: 0.8rem;
				!important;
			}
			#work-list {
				background: white;
				padding: 10px 20px;
				border-radius: 3px;
			}
		</style>
		<script type="text/javascript">
				window.onload = function() {
    			if(!window.location.hash) {
        		window.location = window.location + '#loaded';
        		window.location.reload();
    			}
				}
				function confirmDelete(id, role, company) {
  				var x = confirm(`Are you sure you want to delete? ${role} (${company})`);
  				if (x) {
						window.location.href = 'admin?delete=true&id=' + id.toString() ;
					}
					else return false;
				}
		</script>
  </head>

  <body>
		<div class="container push-md-2">
			<h3>Work History List:</h3>
  		<form>
				<div class="form-group row">
      		<div class="col-md-1 col-sm-2">
        		<br><a href="add-cv" class="btn btn-primary" role="button">Add New</a>
      		</div>
    		</div>
				
				<div class="col-md-6 col-sm-11 col-xs-12" id="work-list">
				<% if (cv) { %>
					<% cv.forEach(function(c) { %>
						<div class="row">
							<div class="col-md-8 col-sm-10 col-xs-10">
								<strong><%= c.role %></strong>, (<%= c.company %>)
							</div>
							<div class="col-md-2 col-sm-2 push-md-3 col-xs-3">
								<a href="edit-cv?id=<%= c.id %>"><i class="fa fa-pencil" title="edit" aria-hidden="true"></i></a>
								<a href="#" onclick="confirmDelete(<%= c.id %>,'<%= c.role %>', '<%= c.company %>')"><i class="fa fa-trash-o" title="delete" aria-hidden="true"></i></a>
							</div>
						</div>
					<% }) %>
				<% } %>
				</div>
				
  		</form>
		</div>
  </body>
</html>

